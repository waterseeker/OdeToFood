@model OdeToFood.ViewModels.HomePageViewModel
<!--a directive to set the type of the Model we are calling in the html. Doing this will allow intellisense to work.-->

@{ 
    ViewBag.Title = "Home";
}

<h1>Welcome!</h1>
<table>

    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>
                <!--<a href="/home/details/@restaurant.Id">Details</a> this is one way to make a dynamic href -->
                @Html.ActionLink("View", "Details", new { id = restaurant.Id })
                <!--the first param is the text of the link, the second is the action on the http request, the third is a route param-->
            </td>
            <td>@restaurant.Name</td>
        </tr>
    }
</table>

<a asp-controller="Home" asp-action="Create">Create</a>

@section footer {
<h3>@Model.CurrentMessage</h3>
}