@model OdeToFood.ViewModels.HomePageViewModel
<!--a directive to set the type of the Model we are calling in the html. Doing this will allow intellisense to work.-->

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>OdeToFood</title>
</head>
<body>
    <h1>Welcome!</h1>
   
    <table>
        @foreach (var restaurant in Model)
        {
        <tr>
            <td>@restaurant.Id</td>
            <td>@restaurant.Name</td>
        </tr>
        }
    </table>
</body>
</html>
